# Amazon SP API Configuration
# Get these values from your Amazon Seller Central account

# AWS Region (default: us-east-1)
AWS_REGION=us-east-1

# Amazon Login with Amazon (LWA) credentials
# These are obtained when you create an app in Seller Central
AMAZON_LWA_APP_ID=amzn1.application-oa2-client.cbc37abfde0c4dc29251cf2f2c6a5203
AMAZON_LWA_CLIENT_SECRET=fa4d10a76f4ff3a1dc0a6c37115a3267660cfa6c343df694e9d5293192d84f9b

# Amazon Refresh Token
# This is obtained through the OAuth flow
AMAZON_REFRESH_TOKEN=your_refresh_token_here

# AWS IAM User credentials
# Create an IAM user with appropriate permissions for SP API
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# AWS IAM Role ARN
# This is the role that your IAM user will assume
AWS_ROLE_ARN=arn:aws:iam::your_account_id:role/your_role_name

# Marketplace IDs (comma-separated for multiple marketplaces)
# Common marketplace IDs:
# US: ATVPDKIKX0DER
# CA: A2EUQ1WTGCTBG2
# UK: A1F83G8C2ARO7P
# DE: A1PA6795UKMFR9
# FR: A13V1IB3VIYZZH
# IT: APJ6JRA9NG5V4
# ES: A1RKKUPIHCS9HS
# JP: A1VC38T7YXB528
# IN: A21TJRUUN4KGV
AMAZON_MARKETPLACE_IDS=A21TJRUUN4KGV

# Sandbox mode (true for testing, false for production)
AMAZON_SP_API_SANDBOX=false

# OAuth Configuration
# Default redirect URI for OAuth callback (used when not provided in request)
DEFAULT_REDIRECT_URI=http://localhost:3000/callback

# Amazon SP API OAuth Scope
# Scope for client credentials rotation
AMAZON_OAUTH_SCOPE=sellingpartnerapi::client_credential:rotation

# Server Configuration
PORT=3000
NODE_ENV=development 